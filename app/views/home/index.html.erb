<h1>iSend <small>emails</small></h1>


<!-- action이랑 method 꼭 지정해주자  -->
<form action="/write" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Recipient</label>
    <input name = "email" type="email" class="form-control" id="email" placeholder="e-mail address goes here">
  </div>
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" name = "title" class="form-control" id="title" placeholder="Title">
  </div>
  <div class="form-group">
    <label for="content">Content</label>
    <textarea name = "content" class="form-control" rows="5" id="content" placeholder="Text goes here"></textarea>
  </div>
  <div class="checkbox" name="checkbox">
    <label>
      <input type="checkbox"> Try to send e-mail using Mailgun
    </label>
    
  </div>
  <button type="submit" class="btn btn-default" name="submit">Submit</button>
</form>

<button type="button" class="btn btn btn-warning" style="position: relative; margin-top: 200px; float: right;"><a href="/list">Sent e-mail log</a></button>